<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/shape_border_radius_default">
    <EditText
        android:id="@+id/dialog_password"
        android:hint="@string/dialog_password_title"
        android:layout_marginTop="@dimen/dimenLarge"
        android:layout_marginBottom="@dimen/dimenLarge"
        android:paddingStart="@dimen/dimenSpace"
        android:paddingEnd="@dimen/dimenSpace"
        android:textSize="@dimen/dimenFontL"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:gravity="center"
        android:background="@color/colorDefaultDefault"
        android:textColor="@color/colorFontDefault"
        android:textColorHint="?colorGrayS"
        android:focusedByDefault="true"
        tools:targetApi="o" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLine"
        android:background="?colorLine"/>
    <TextView
        android:id="@+id/dialog_password_confirm"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimenSpace"
        android:textColor="?colorPrimary"
        android:textSize="@dimen/dimenFont"
        android:textStyle="bold"
        android:text="@string/dialog_ok"
        android:gravity="center"/>
</LinearLayout>