<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smartrefresh.layout.SmartRefreshLayout android:id="@+id/asset_list_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:srlEnableOverScrollDrag="true"
    app:srlEnableLoadMore="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorDefaultDark">
    <com.scwang.smartrefresh.layout.header.ClassicsHeader
        android:id="@+id/asset_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:contentDescription="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="?drawableAssetBg"/>

                <ImageView
                    android:id="@+id/fragment_asset_manage"
                    android:layout_width="@dimen/dimenLarge"
                    android:layout_height="@dimen/dimenLarge"
                    android:layout_gravity="bottom|end"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_asset_manage"
                    android:tint="?colorLight"
                    android:layout_marginEnd="@dimen/dimenSpace"
                    android:layout_marginBottom="@dimen/dimenSpace"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center|center_vertical"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/fragment_asset_main_asset"
                        android:textColor="?colorLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="32sp"/>
                    <TextView
                        android:id="@+id/fragment_asset_main_balance"
                        android:textColor="?colorLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"/>
                </LinearLayout>
            </FrameLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/asset_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</com.scwang.smartrefresh.layout.SmartRefreshLayout>