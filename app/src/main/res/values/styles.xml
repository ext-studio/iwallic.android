<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="ThemeDefault" parent="ThemeIWallic">
        <item name="colorDark">@color/colorDark</item>
        <item name="colorLight">@color/colorLight</item>
        <item name="colorTransparent">@color/colorTransparent</item>

        <item name="colorPrimary">@color/colorInitPrimary</item>
        <item name="colorPrimaryDark">@color/colorInitPrimaryDark</item>

        <item name="colorDanger">@color/colorInitDanger</item>

        <item name="colorDefault">@color/colorInitDefault</item>
        <item name="colorDefaultDark">@color/colorInitDefaultDark</item>
        <item name="colorLine">@color/colorInitDefaultLine</item>

        <item name="colorSuccess">@color/colorInitSuccess</item>

        <item name="colorGrayL">@color/colorInitGrayL</item>
        <item name="colorGray">@color/colorInitGray</item>
        <item name="colorGrayS">@color/colorInitGrayS</item>

        <item name="drawableRoundMini">@drawable/shape_round_mini_init</item>

        <item name="selectorOptionItem">@drawable/selector_optionitem_default</item>
        <item name="colorButtonNormal">@color/colorPrimaryDefault</item>
        <item name="drawableAssetBg">@mipmap/bg_asset</item>
        <item name="drawableAssetDetailBg">@mipmap/bg_asset_detail</item>
        <item name="drawableTransactionSuccess">@mipmap/tx_transfer_success</item>
        <item name="drawableUserSupport">@drawable/icon_support</item>
        <item name="drawableUserAbout">@drawable/icon_about</item>
        <item name="drawableUserSetting">@drawable/icon_setting</item>
        <item name="drawableUserSignout">@drawable/icon_signout</item>
        <item name="drawableUserBackup">@drawable/icon_backup</item>
        <item name="drawableClick">@drawable/icon_click</item>
        <item name="drawableEye">@drawable/icon_eye</item>
        <item name="drawableEyeClose">@drawable/icon_eye_close</item>
    </style>

    <style name="ThemeNight" parent="ThemeIWallic">
        <item name="colorDark">@color/colorDark</item>
        <item name="colorLight">@color/colorLight</item>
        <item name="colorTransparent">@color/colorTransparent</item>

        <item name="colorPrimary">@color/colorNightPrimary</item>
        <item name="colorPrimaryDark">@color/colorNightPrimaryDark</item>

        <item name="colorDanger">@color/colorNightDanger</item>

        <item name="colorDefault">@color/colorNightDefault</item>
        <item name="colorDefaultDark">@color/colorNightDefaultDark</item>
        <item name="colorLine">@color/colorNightDefaultLine</item>

        <item name="colorSuccess">@color/colorNightSuccess</item>

        <item name="colorGrayL">@color/colorNightGrayL</item>
        <item name="colorGray">@color/colorNightGray</item>
        <item name="colorGrayS">@color/colorNightGrayS</item>

        <item name="drawableRoundMini">@drawable/shape_round_mini_night</item>

        <item name="selectorOptionItem">@drawable/selector_optionitem_night</item>
        <item name="colorButtonNormal">@color/colorPrimaryNight</item>
        <item name="drawableAssetBg">@mipmap/bg_asset_dark</item>
        <item name="drawableAssetDetailBg">@mipmap/bg_asset_detail_dark</item>
        <item name="drawableTransactionSuccess">@mipmap/tx_transfer_success_dark</item>
        <item name="drawableUserSupport">@drawable/icon_support_dark</item>
        <item name="drawableUserAbout">@drawable/icon_about_dark</item>
        <item name="drawableUserSetting">@drawable/icon_setting_dark</item>
        <item name="drawableUserSignout">@drawable/icon_signout_dark</item>
        <item name="drawableUserBackup">@drawable/icon_backup_dark</item>
        <item name="drawableClick">@drawable/icon_click_dark</item>
        <item name="drawableEye">@drawable/icon_eye_dark</item>
        <item name="drawableEyeClose">@drawable/icon_eye_close_dark</item>
    </style>

    <style name="ThemeIWallic" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="app_nav">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?colorPrimary</item>
    </style>
    <style name="app_nav_back">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawableStart">@drawable/icon_back</item>
        <item name="android:textColor">?colorDefault</item>
        <item name="android:textSize">@dimen/dimenFont</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableTint" tools:targetApi="m">?colorDefault</item>
    </style>
    <style name="app_nav_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?colorDefault</item>
        <item name="android:textSize">@dimen/dimenFontL</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxLength">25</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="app_nav_menu">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?colorDefault</item>
        <item name="android:textSize">@dimen/dimenFont</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="PageFullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="qrcode_container">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dimenSmall</item>
        <item name="android:layout_marginTop">@dimen/dimenLarge</item>
        <item name="android:layout_marginBottom">@dimen/dimenSpace</item>
        <item name="android:background">@drawable/shape_border_radius</item>
    </style>

    <!-- 操作项样式 start -->

    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/dimenSpace</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?selectorOptionItem</item>
    </style>

    <style name="option_item_img">
        <item name="android:layout_width">@dimen/dimenIcon</item>
        <item name="android:layout_height">@dimen/dimenIcon</item>
        <item name="android:layout_marginRight">@dimen/dimenSpace</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="option_item_imgarrow" parent="@style/option_item_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:tint">?colorGray</item>
    </style>

    <style name="option_item_text_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dimenMini</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorGrayL</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">@dimen/dimenDefault</item>
    </style>

    <style name="option_item_text" parent="@style/option_item_text_parent">
        <item name="android:drawablePadding">@dimen/dimenSmall</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?colorGrayL</item>
    </style>

    <!-- 操作项样式end -->

    <style name="option_item_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimenLine</item>
        <item name="android:background">?colorLine</item>
        <item name="android:layout_marginStart">@dimen/dimenSpace</item>
    </style>
    <style name="option_item_line_full" parent="@style/option_item_line">
        <item name="android:layout_marginStart">0dp</item>
    </style>

    <style name="dialog_main_toggle" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="app_status_bar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:layout_height">@dimen/dimenStatusBar</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
